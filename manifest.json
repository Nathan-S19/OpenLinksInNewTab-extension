{
  "manifest_version": 3,
  "name": "Open Links in New Tab",
  "version": "1.0",
  "description": "Ensures all links open in a new tab.",
  "permissions": ["activeTab", "storage"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
